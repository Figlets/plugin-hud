{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist/dts",
		"lib": ["es2017", "es7", "es6", "dom"],
		"target": "ES2019",
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
		"module": "commonjs",
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules", "__tests__"]
}